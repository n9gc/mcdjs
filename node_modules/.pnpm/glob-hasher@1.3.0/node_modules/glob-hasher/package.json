{
  "name": "glob-hasher",
  "version": "1.3.0",
  "main": "index.js",
  "description": "A simple glob hasher for Node.js, uses Rust for faster globbing and hashing",
  "types": "index.d.ts",
  "napi": {
    "name": "glob-hasher",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-pc-windows-msvc"
      ]
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.14.7",
    "fast-glob": "3.2.12",
    "jest": "^29.4.2"
  },
  "ava": {
    "timeout": "3m"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "universal": "napi universal",
    "version": "napi version"
  },
  "packageManager": "yarn@3.4.1",
  "optionalDependencies": {
    "glob-hasher-win32-x64-msvc": "1.3.0",
    "glob-hasher-darwin-x64": "1.3.0",
    "glob-hasher-linux-x64-gnu": "1.3.0",
    "glob-hasher-darwin-arm64": "1.3.0",
    "glob-hasher-win32-arm64-msvc": "1.3.0"
  }
}